/* 首页容器 背景颜色 */
QWidget[MainWindowWidgets="Container"]{
background-color: #f0f0f0;
}
/* 首页标题栏 背景颜色 */
HomeTitleBar{
qproperty-TitleBarBackgroundColor: #404142;
}
/* 首页标题栏 窗口按钮 常规状态 */
QPushButton[WindowButton="NoCloseButton"]{
min-width: 50px;
max-width: 50px;
min-height: 30px;
max-height: 30px;
border: none;
background-color: #404142;
}
QPushButton[WindowButton="CloseButton"]{
min-width: 50px;
max-width: 50px;
min-height: 30px;
max-height: 30px;
border: none;
background-color: #404142;
}
/* 首页标题栏 窗口按钮 悬停状态 */
QPushButton[WindowButton="NoCloseButton"]:hover{
background-color: #d2d2d2;
}
QPushButton[WindowButton="CloseButton"]:hover{
background-color: #e81123;
}
/* 首页标题栏 页面标签 */
HomeTitleBar #HomeTitleBar_labPageName{
border: none;
padding: 5px 20px 5px 20px;
color: #d2d2d2;
