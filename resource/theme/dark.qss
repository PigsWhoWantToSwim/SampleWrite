image-position: center;
}
HomeNavigationBar #HomeNavigationBar_btnRecycle:checked,
HomeNavigationBar #HomeNavigationBar_btnRecycle:hover{
image: url(":/image/recycle - black.png");
image-position: center;
}
/* 首页工作区首页 容器 */
QWidget[HomeWorkspaceWidgets="Container"]{
background-color: #26313e;
}
/* 首页工作区首页 垂直滚动条 槽*/
QScrollArea[HomeWorkspaceWidgets="ScrollArea"] QScrollBar:vertical,
TextEditWorkspacePage QScrollBar:vertical,
RestoreHistoricalVersionDialog QScrollBar:vertical{
width: 10px;
padding: 0px;
background: #26313e;
}
/* 垂直滚动条 滑块 */
QScrollArea[HomeWorkspaceWidgets="ScrollArea"] QScrollBar::handle:vertical,
TextEditWorkspacePage QScrollBar::handle:vertical,
RestoreHistoricalVersionDialog QScrollBar::handle:vertical{
min-height: 100px;
border-radius: 5px;
background: #404142;
}
/* 垂直滚动条 滑块 光标悬停 */
QScrollArea[HomeWorkspaceWidgets="ScrollArea"] QScrollBar::handle:vertical:hover,
TextEditWorkspacePage QScrollBar::handle:vertical:hover,
RestoreHistoricalVersionDialog QScrollBar::handle:vertical:hover{
background: #ffffff;
}
/* 垂直滚动条 滑块 光标按下 */
QScrollArea[HomeWorkspaceWidgets="ScrollArea"] QScrollBar::handle:vertical:pressed,
TextEditWorkspacePage QScrollBar::handle:vertical:pressed,
RestoreHistoricalVersionDialog QScrollBar::handle:vertical:pressed{
background: #ffffff;
}
/* 划过的槽 */
QScrollArea[HomeWorkspaceWidgets="ScrollArea"] QScrollBar::sub-page:vertical,
TextEditWorkspacePage QScrollBar::sub-page:vertical,
RestoreHistoricalVersionDialog QScrollBar::sub-page:vertical{
background: none;
}
/* 未划过的槽 */
QScrollArea[HomeWorkspaceWidgets="ScrollArea"] QScrollBar::add-page:vertical,
TextEditWorkspacePage QScrollBar::add-page:vertical,
RestoreHistoricalVersionDialog QScrollBar::add-page:vertical{
background: none;
}
/* 在QScrollBar中跳转上一行的按钮 */
QScrollArea[HomeWorkspaceWidgets="ScrollArea"] QScrollBar::sub-line:vertical,
TextEditWorkspacePage QScrollBar::sub-line:vertical,
RestoreHistoricalVersionDialog QScrollBar::sub-line:vertical{
background: none;
}
/* 在QScrollBar中跳转下一行的按钮 */
QScrollArea[HomeWorkspaceWidgets="ScrollArea"] QScrollBar::add-line:vertical,
TextEditWorkspacePage QScrollBar::add-line:vertical,
RestoreHistoricalVersionDialog QScrollBar::add-line:vertical{
background: none;
}
