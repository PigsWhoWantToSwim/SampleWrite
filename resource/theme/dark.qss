font: 10pt "Microsoft YaHei UI";
}
/* 首页导航栏 */
HomeNavigationBar{
qproperty-HomeNavigationBarBackgroundColor: #d2d2d2;
}
/* 首页导航栏 按钮  常规状态 */
HomeNavigationBar QPushButton[NavigationBarButton="NavigationBarButton"]{
border: none;
padding: 15px 80px 15px 5px;
background-color: #d2d2d2;
color: #969696;
font: 12pt "Microsoft YaHei UI";
text-align: right;
}
/* 首页导航栏 按钮  勾选、勾选加悬停状态 */
HomeNavigationBar QPushButton[NavigationBarButton="NavigationBarButton"]:checked,
HomeNavigationBar QPushButton[NavigationBarButton="NavigationBarButton"]:checked:hover{
border-style: solid;
border-color: #404142;
border-width: 0px 0px 0px 5px;;
padding: 15px 80px 15px 0px;
background-color: #bfbfbf;
color: #404142;
font: 700 "Microsoft YaHei UI";
text-align: right;
}
/* 首页导航栏 按钮  悬停状态 */
HomeNavigationBar QPushButton[NavigationBarButton="NavigationBarButton"]:hover{
border: none;
padding: 15px 80px 15px 5px;
background-color: #bfbfbf;
color: #404142;
font: 700 "Microsoft YaHei UI";
text-align: right;
}
/* 首导航栏 按钮 图标变化 */
HomeNavigationBar #HomeNavigationBar_btnHome{
image: url(":/image/home - gray.png");
image-position: center;
}
HomeNavigationBar #HomeNavigationBar_btnHome:checked,
HomeNavigationBar #HomeNavigationBar_btnHome:hover{
image: url(":/image/home - black.png");
image-position: center;
}
HomeNavigationBar #HomeNavigationBar_btnFind{
image: url(":/image/find - gray.png");
